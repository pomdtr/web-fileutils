{
	"name": "fileutils",
	"displayName": "File Utils",
	"publisher": "pomdtr",
	"repository": "https://github.com/pomdtr/web-fileutils",
	"icon": "assets/icon.png",
	"description": "File Utils clone with support for the browser.",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:fileutils.newFile",
		"onCommand:fileutils.newFileAtRoot",
		"onCommand:fileutils.newFolder",
		"onCommand:fileutils.newFolderAtRoot",
		"onCommand:fileutils.remove",
		"onCommand:fileutils.copy",
		"onCommand:fileutils.move",
		"onCommand:fileutils.duplicate"
	],
	"contributes": {
		"menus": {
			"editor/title/context": [
				{
					"command": "fileutils.move",
					"group": "1_modification@1"
				},
				{
					"command": "fileutils.duplicate",
					"group": "1_modification@2"
				},
				{
					"command": "fileutils.remove",
					"group": "1_modification@3"
				}
			]
		},
		"commands": [
			{
				"command": "fileutils.newFile",
				"title": "New File Relative to Current View",
				"category": "File Utils"
			},
			{
				"command": "fileutils.newFileAtRoot",
				"title": "New File Relative to Project Root",
				"enablement": "workspaceFolderCount > 0",
				"category": "File Utils"
			},
			{
				"command": "fileutils.newFolder",
				"title": "New Folder Relative to Current View",
				"category": "File Utils"
			},
			{
				"command": "fileutils.newFolderAtRoot",
				"title": "New Folder Relative to Project Root",
				"enablement": "workspaceFolderCount > 0",
				"category": "File Utils"
			},
			{
				"command": "fileutils.move",
				"title": "Move / Rename",
				"category": "File Utils"
			},
			{
				"command": "fileutils.duplicate",
				"title": "Duplicate",
				"category": "File Utils"
			},
			{
				"command": "fileutils.remove",
				"title": "Delete",
				"category": "File Utils"
			}
		]
	},
	"browser": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}
